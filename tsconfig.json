{
    "compilerOptions": {
        "strict": true,
        "target": "es2018",
        "module": "esnext",
        "moduleResolution": "node",
        "baseUrl": "./src",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true
    },
    "include": [
        "./src",
        "tsdown.config.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}
